<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ProfileActivity">

    <!-- Título -->
    <TextView
            android:id="@+id/textViewRegistroDeCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de Cuenta"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imagen del usuario -->
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/foto_prueba"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/textViewRegistroDeCuenta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre -->
    <EditText
            android:id="@+id/txtNewUserName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Nombre Completo"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Correo -->
    <EditText
            android:id="@+id/txtNewUserEmail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtNewUserName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contraseña -->
    <EditText
            android:id="@+id/txtNewPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtNewUserEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Confirmar contraseña -->
    <EditText
            android:id="@+id/txtReenterNewPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Repetir contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtNewPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Crear Cuenta -->
    <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Crear Cuenta"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#03A9F4"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtReenterNewPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Cancelar -->
    <Button
            android:id="@+id/btnCancelNewAccount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Cancelar"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#F44336"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnCreateAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
